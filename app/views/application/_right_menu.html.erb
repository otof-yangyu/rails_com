<div class="right menu">
  <%= render partial: 'shared/locales' %>
  <%= render partial: 'rails_notice/link' %>
  <% if current_user %>
    <div class="ui simple dropdown item">
      <%= image_tag current_user.avatar, class: 'ui avatar image' if current_user.avatar.attached? %>
      <%= current_user.name %>
      <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to '个人中心', '/my', class: active_helper(controllers: ['users']) %>
        <%= link_to '管理', admin_root_path, class: 'item' %>
        <%= link_to '退出', logout_path, data: { confirm: '确认退出' }, class: 'item' %>
      </div>
    </div>
  <% else %>
    <%= link_to sign_path, class: 'item' do %>
      <i class="fas fa-user"></i>
      <span>登陆/注册</span>
    <% end %>
  <% end %>
</div>
